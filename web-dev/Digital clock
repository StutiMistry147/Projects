<body>
  <div class="grid"></div>
  <div class="container">
    <div class="clock" id="clock"></div>
    <div class="date" id="date"></div>
    <div class="controls">
      <button onclick="toggleFormat()">Toggle 12/24h</button>
      <select id="themeSelector" onchange="changeTheme()">
        <option value="#fff">White</option>
        <option value="#f8b195">Pink</option>
        <option value="#c06c84">Purple</option>
      </select>
    </div>
  
  </div>

  <script>
    let is24Hour = false;

    function updateClock() {
      const now = new Date();
      let hours = now.getHours();
      let minutes = now.getMinutes();
      let seconds = now.getSeconds();
      let period = "";

      if(!is24Hour){
        period = hours >= 12 ? " PM" : " AM";
        hours = hours % 12 || 12;
      }

      hours = String(hours).padStart(2,'0');
      minutes = String(minutes).padStart(2,'0');
      seconds = String(seconds).padStart(2,'0');

      document.getElementById('clock').textContent = `${hours}:${minutes}:${seconds}${period}`;
      document.getElementById('date').textContent = now.toDateString();
    }

    function toggleFormat() {
      is24Hour = !is24Hour;
      updateClock();
    }

    function changeTheme() {
      const color = document.getElementById('themeSelector').value;
      document.querySelector('.clock').style.color = color;
      document.querySelector('.date').style.color = color;
    }

    setInterval(updateClock,1000);
    updateClock();
  </script>
</body>
</html>
